                    <!-- Indicators -->
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        @{
            var ci = 0;
                        }
                        @foreach (var item in Model.FeaturedProducts)
                        {
                            if (ci == 0)
                            {
                                @:<div class="item active">
