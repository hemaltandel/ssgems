@model HeaderLinksModel
@using Nop.Web.Models.Common;


@*@Html.Action("Index","SideMenu",new { area = "" })*@
    
@Html.Widget("header_links_before")


<div class="col-md-4">
    <div class="pull-left">@Html.Action("LanguageSelector", "Common")</div>
    <div>@Html.Action("CurrencySelector", "Common")</div>
</div>
<div class="col-md-8">
    <div class="pull-right">
        <ul class="top-links">
            <li>
                    @if (Model.IsAuthenticated)
                    {
                        <a href="@Url.RouteUrl("CustomerInfo")" class="account">@Model.CustomerEmailUsername</a>
                    }
                    else { 
                        <a href="@Url.RouteUrl("Register")" class="ico-register">@T("Account.Register")</a>
                    }
            </li>
            @if (Model.WishlistEnabled)
            {
            <li class="separator">&nbsp;</li>
            <li>
                <a href="@Url.RouteUrl("Wishlist")" class="ico-wishlist">
                    <span class="cart-label">@T("Wishlist")</span>
                    <span class="wishlist-qty">@T("Wishlist.HeaderQuantity", Model.WishlistItems)</span>
                </a>
            </li>
            }
